<form method="post" action="{{ path('answer_delete', {'id': answer.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ answer.id) }}">
    <button class="btn btn-outline-danger">{% trans %}Delete{% endtrans %}</button>
</form>
