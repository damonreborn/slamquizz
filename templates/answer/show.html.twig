{% extends 'base.html.twig' %}

{% block title %}{% trans %}Answer{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Answer{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ answer.Text }}</td>
            </tr>
            <tr>
                <th>Correct</th>
                <td>{{ answer.Correct }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('answer_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a class="btn btn-outline-success" href="{{ path('answer_edit', {'id': answer.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
